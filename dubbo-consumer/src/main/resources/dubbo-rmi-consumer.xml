<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <!--消费方应用名-->
    <dubbo:application name="dubbo-consumer"/>

    <context:property-placeholder location="classpath:zookeeper.properties"/>
    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry protocol="zookeeper" address="${zookeeper.address}"/><!--transport表示传输协议-->

    <!--设置默认协议-->
    <!--使用rmi作为协议-->
    <!-- Define rmi protocol -->
    <dubbo:protocol name="rmi" port="2099" />
    <!-- Set default protocol: -->
    <dubbo:provider protocol="rmi" />
    <!-- Spring compatible: -->
    <dubbo:protocol name="rmi" codec="spring" />

    <!-- 生成远程服务代理，可以和本地bean一样使用demoProviderService  check属性，启动的时候是否检查 一般设置为false 启动的时候不检查-->
    <!--配置rmi协议-->
    <dubbo:reference interface="org.github.api.DubboDefaultTestService" id="dubboDefaultTestService" version="4.0.0" timeout="150000"
                     async="false" loadbalance="random" protocol="rmi"/>

</beans>